modules = ["python-3.11", "python3", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["fontconfig", "libxcrypt", "libyaml", "postgresql", "xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Admin Server"

[[workflows.workflow]]
name = "FastAPI Admin Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 8000

[deployment]
run = ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 40445
externalPort = 3001

[[ports]]
localPort = 44859
externalPort = 3000

[agent]
expertMode = true
